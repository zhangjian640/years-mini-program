<wxs src="../../utils/filter.wxs" module="util" />
<view class="container">
  <view class="head">
    <image src="{{book.image}}"></image>
    <text class="title">{{book.title}}</text>
    <text class="author">{{book.author[0]}}   </text>
  </view>
  <view class="sub-container">
    <text class="headline">短评</text>
    <text wx:if="{{!comments.length}}" class="shadow">还没有短评</text>
    <view class="comment-container">
      <block wx:for="{{util.limit(comments, 15)}}" wx:key="id">
        <c-tag tag-class="{{util.highline(index)}}" text="{{item.content}}">
          <text class="num" slot="after">{{ '+' + item.nums}}</text>
        </c-tag>
      </block>
    </view>
  </view>
  <view class="sub-container">
    <text class="headline">内容简介</text>
    <text class="content" decode="{{true}}">{{util.format(book.summary)}}</text>
  </view>
  <view class="sub-container">
    <text class="headline">内容简介</text>
    <view class="detail-container">
      <view class="vertical description">
        <text>出版社</text>
        <text>出版年</text>
        <text>页数</text>
        <text>定价</text>
        <text>装帧</text>
      </view>
      <view class="vertical">
        <text>{{book.publisher}}</text>
        <text>{{book.pubdate}}</text>
        <text>{{book.pages}}</text>
        <text>{{book.price}}</text>
        <text>{{book.binding}}</text>
      </view>
    </view>
  </view>
</view>

<view wx:if="{{!posting}}" class="post-container">
  <view bind:tap="onFakePost" class="post-fake">
    <text>输入短评</text>
  </view>
  <view class="like-container">
    <c-like bind:like="onLike" class="like" like="{{likeStatus}}" count="{{likeCount}}" />
    <c-button class="share-btn" open-type="share">
  <image class="share" slot="img" src="/images/icon/share.png"></image>
</c-button>
  </view>
</view>

<c-mask wx:if="{{posting}}" />

<view wx:if="{{posting}}" class="posting-container">
  <view class="post-header">
    <text wx:if="{{comments.length}}">仅可点击标签+1</text>
    <text wx:else>暂无短评</text>
    <text bind:tap="onCancel" class="cancel">取消</text>
  </view>
  <view class="comment-container">
    <block wx:for="{{util.limit(comments, 3)}}" wx:key="id">
  <c-tag bind:tapping="onPost" tag-class="{{util.highline(index)}}" text="{{item.content}}">
    <text class="num" slot="after">{{ '+' + item.nums}}</text>
  </c-tag>
</block>
  </view>
  <input bindconfirm="onPost" class="post" placeholder="短评最多12个字"></input>
</view>
